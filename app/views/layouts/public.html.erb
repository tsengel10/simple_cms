<!DOCTYPE html>
<html>
	<head>
	  <title>Simple CMS | <%= " | #{@page_title}" if @page_title  %></title>

	  <%= stylesheet_link_tag('application', :media => 'all') %>
	  
	  <%= javascript_include_tag('application') %>

	</head>
	<body>
	<div id="header">
		<h2 class="hero_link"><%= link_to("Simple CMS", {:controller => 'access', :action => 'index'}) %></h2>
	</div>
	<div id="main">
		<div id="navigation">
			<%= render(:partial => 'layouts/navigation', :locals => {:subjects => @subjects}) %>
		</div>

		<div id="content">
			<!-- Before yield -->
			<%= yield %>
			<!-- After yield -->
		</div>
		<div class="clear">
			
		</div>
	</div>

	<div id="footer">
		<p>&copy; Simple CMS for rails beginners / Tsengel Gerelsaikhan</p>
	</div>
	</body>
</html>
