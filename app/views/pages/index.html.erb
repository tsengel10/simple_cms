<% @page_title = "Pages" %>

<%= link_to("<< Back to List", {:controller => 'subjects',  :action => 'index'}) %>

<div>
	<h2>Pages</h2>
	<%= link_to("Add New Page", {:action => 'new', :subject_id => @subject.id}, :class => "action new") %>

	<p>Number of Pages: <%= @page_count %></p>

	<table>
		<tr>
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Subject</th>
			<th>Sections</th>
			<th>Permalink</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.name %></td>
			<td><%= page.visible ? 'Yes' : 'No' %></td>
			<td><%= page.subject.name if page.subject%></td>
			<td><%= page.sections.size%></td>
			<td><%= page.permalink %></td>
			<td>
				<%= link_to("Show", {:action => 'show', :id => page.id, :subject_id => @subject.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => page.id, :subject_id => @subject.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => page.id, :subject_id => @subject.id}, :class => 'action delete') %>

				<%= link_to("View sections", {:controller => 'sections', :page_id => page.id}, :class => 'action') %>

			</td>
		</tr>
		<% end %>
	</table>
		<div><%= link_to("Back to Admin menu", 
	:controller => 'access' ) %></div>
</div>
