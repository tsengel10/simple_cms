<% @page_title = "Subjects" %>
<div>
	<h2>Subjects</h2>
	<%= link_to("Add New Subject", {:action => 'new'}, :class => "action new") %>

		

	<p>Number of Subjects: <%= @subject_count %></p>
	<table>
		<tr>
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Visible</th>
			<th>Pages</th>
			<th>Actions</th>
		</tr>
		<% @subjects.each do |subject| %>
		<tr>
			<td><%= subject.position %></td>
			<td><%= subject.name %></td>
			<td><%= subject.visible ? 'Yes' : 'No' %></td>
			<td><%= subject.pages.size %></td>
			<td>
				<%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => subject.id}, :class => 'action delete') %>

				<%= link_to("View pages", {:controller => 'pages', :subject_id => subject.id}, :class => 'action delete') %>

			</td>
		</tr>
		<% end %>
	</table>
		<div><%= link_to("Back to Admin menu", 
	:controller => 'access' ) %></div>
</div>
