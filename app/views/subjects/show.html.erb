<%= link_to("<< Back to List", {:action => 'index'}) %>

<div>
	<h2>Show subject</h2>

	<table>
		<tr>
			<th>Name</th>
			<td><%= @subject.name %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @subject.visible ? 'true' : 'false' %></td>
		</tr>
		<tr>
			<th>Created at</th>
			<td><%= @subject.created_at %></td>
		</tr>
		<tr>
			<th>Updated at</th>
			<td><%= @subject.updated_at %></td>
		</tr>
	</table>
</div>